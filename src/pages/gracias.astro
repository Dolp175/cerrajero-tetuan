---
import Layout from "../layouts/Layout.astro";

const title = "Gracias por tu mensaje";
const description = "Te responderemos en menos de 30 minutos.";
const canonicalUrl = "https://cerrajero-tetuan.com/gracias";

---

<Layout
    title="Gracias por contactar | Cerrajero Tetuán"
    description="Patricio ha recibido tu mensaje. Te responderá en menos de 30 minutos. Urgencias: 611 754 389"
>
    <head>
        <meta name="robots" content="noindex, nofollow" />
    </head>

    <section class="bg-white py-16 min-h-[60vh]">
        <div class="container mx-auto px-4 text-center">
            <!-- Icono de confirmación -->
            <div class="text-green-500 text-6xl mb-6">✓</div>

            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                ¡Mensaje recibido <span class="text-amber-600">con éxito!</span>
            </h1>

            <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
                <strong>Patricio</strong>, tu cerrajero en Tetuán, ya tiene tu
                mensaje y te responderá personalmente antes de 30 minutos.
            </p>

            <!-- Panel de contacto urgente -->
            <div
                class="bg-amber-50 border border-amber-100 rounded-lg p-6 max-w-lg mx-auto mb-8"
            >
                <h3 class="font-bold text-lg mb-3">
                    🚨 ¿Es una emergencia urgente?
                </h3>
                <p class="mb-4">Para una respuesta inmediata:</p>
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a
                        href="tel:+34611754389"
                        class="bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 px-6 rounded-full transition"
                    >
                        📞 Llamar ahora
                    </a>
                    <a
                        href="https://wa.me/34611754389"
                        target="_blank"
                        class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full transition"
                    >
                        💬 WhatsApp
                    </a>
                </div>
            </div>

            <!-- Botón para volver -->
            <a
                href="/"
                class="inline-block mt-6 text-amber-600 hover:text-amber-700 font-medium underline"
            >
                ← Volver a la página principal
            </a>
        </div>
    </section>
</Layout>
