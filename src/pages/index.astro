---
import Layout from "../layouts/Layout.astro";

const title = "Cerrajero en Tetuán | Urgencias y aperturas";
const description =
  "📞 611 754 389 – Cerrajero urgente en Tetuán. Aperturas, cambios de cerradura y servicio rápido en 15 minutos. Presupuesto sin compromiso.";
const canonicalUrl = "https://cerrajero-tetuan.com";
const imageUrl = "/images/logo-cerrajero-tetuan.webp";
---

<Layout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  imageUrl={imageUrl}
>
  <section
    class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-12 md:py-20"
  >
    <div class="container mx-auto px-4 text-center">
      <!-- Título y subtítulo más compactos -->
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-2">
          Cerrajero <span class="text-amber-500">Urgente</span> en Tetuán
        </h1>
        <p class="text-lg md:text-xl opacity-90 max-w-2xl mx-auto">
          Servicio de 7:00 a 00:00 • Sin coste de desplazamiento • Atención
          directa con Patricio
        </p>
      </div>

      <!-- Texto descriptivo -->
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto leading-relaxed">
        ¿Necesitas un cerrajero <strong class="text-amber-400"
          >fiable y rápido</strong
        > en Tetuán?<br />
        <span class="text-base opacity-85"
          >15 años resolviendo emergencias en el distrito</span
        >
      </p>

      <!-- Botones CTA con menos separación -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center mb-8">
        <a
          href="tel:+34611754389"
          class="bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 px-6 rounded-full text-lg transition shadow-lg hover:shadow-amber-700/30"
        >
          📞 Llama ahora
        </a>
